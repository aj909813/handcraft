<!-- murti -->
<h2>Murti/Statue <h6><a href="/product/murti" class="view-all">Vew all</a></h6></h2> 

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
 
 <% for (let Murti of allMurti) { %>
  
    <div class="card">

        <% if (Murti.image && Murti.image.length > 0) { %>
          <img src="/<%= Murti.image[0] %>" alt="Murti Image">
          <% } else { %>
          <img src="/default.jpg" alt="Default Image" >
        <% } %>
     
        <div class="container">
         <h4><b><%= Murti.name%></b></h4> 
         <p><%= Murti.description%></p> 
         <a  class="view-all"href="/product/murti/<%=Murti._id%>">More</a><br>
      </div>
      <br>
    </div>
   
  <% } %>
  
</div>

<br>

