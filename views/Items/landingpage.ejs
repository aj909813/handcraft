<div class="swiper mySwiper">
  <div class="swiper-wrapper">
    <div class="swiper-slide"> <img src="/assets/shiv.jpg"alt="shiv"></div>
    <div class="swiper-slide"><img src="/assets/bajyot1.jpg" alt="Image 2"></div>
    <div class="swiper-slide"><img src="/assets/poojathali.jpg" alt="Image 3"></div>
  </div>
  <!-- Pagination (Dots) -->
  <div class="swiper-pagination"></div>
  <!-- Navigation Arrows -->
  <div class="swiper-button-next"></div>
  <div class="swiper-button-prev"></div>
</div>

